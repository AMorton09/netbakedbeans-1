<div class="page-header">
<h3>About Us</h3>
<br><br>
{{#each movies}}
<table bgcolor="grey" cellpadding="10">
  <tr>
    <th bgcolor="white">Title</th>
    <th bgcolor="white">Description</th>
    <th bgcolor="white">Rating</th>
    <th bgcolor="white">Rent</th>
  </tr>
  <tr>
    <td bgcolor="grey" width="15%">{{this.title}}</td>
    <td bgcolor="grey" width="70%">{{this.description}}</td>
    <td bgcolor="grey" width="15%">{{this.rating}}</td>
    <form method="post" action="/rent">
      <td bgcolor="grey" width="15%"><button type="submit" class="btn btn-default"> Rent </button></td>
    </form> 
  </tr>
</table>
{{/each}}


</div>

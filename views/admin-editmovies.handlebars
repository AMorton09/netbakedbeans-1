<div class="page-header">
  {{>navbaradmin}}
<h3>Edit Selected Movie</h3>

{{#each movie}}
<form class="form-horizontal"  method = "post" action="/editmovie">
<input name="film_id" type="hidden" value="{{this.film_id}}"/>
<div class="form-group">

    <label class="control-label" for="title">Title:</label>
    <input name="title" required="true" class="form-control" id="title" value={{this.title}} />
</div>

<div class="form-group">

    <label class="control-label" for="description">Description:</label>
    <input name="description" required="true" class="form-control" id="description" value={{this.description}} />
</div>

<div class="form-group">

    <label class="control-label" for="release_year">Release Year:</label>
    <input name="release_year" required="true" class="form-control" id="release_year" value={{this.release_year}} />
</div>

<div class="form-group">

    <label class="control-label" for="rental_rate">Rental Rate:</label>
    <input name="rental_rate" required="true" class="form-control" id="rental_rate" value={{this.rental_rate}} />
</div>

<div class="form-group">

    <label class="control-label" for="length">Length:</label>
    <input name="length" required="true" class="form-control" id="length" value={{this.length}} />
</div>
<div class="form-group">

    <label class="control-label" for="rating">Rating:</label>
    <input name="rating" required="true" class="form-control" id="rating" value={{this.rating}} />
</div>


<button type="submit" class="btn btn-default"> Save Changes </button>
</form>
{{/each}}

</div>
